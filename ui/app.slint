import { Graph, Node, LinkData, FloatingLinkData, MoveAreaLogic, LinkLogic, NodeLogic } from "@ui/node_view.slint";
import { SearchItem, Palette, PaletteSearch } from "@ui/command_palette.slint";
import { Timeline } from "@ui/timeline.slint";
import { Tabs, TabLogic } from "@ui/tabs.slint";

export {
    NodeLogic,
    MoveAreaLogic,
    LinkLogic,
    PaletteSearch,
    TabLogic
}

export component View inherits Window {
    in property <[Node]> nodes;
    in property <[LinkData]> links;
    in property <FloatingLinkData> floating;
    in property <int> selected_tab;
    in property <[string]> tab_names;
    in property <[SearchItem]> command_palette_results;

    preferred-height: 20cm;
    preferred-width: 30cm;

    title: "Kira Studio";

    init() => {
        focus.focus();
    }

    focus := FocusScope {

        VerticalLayout {
            Tabs {
                selected_tab: selected_tab;
                tab_names: tab_names;
            }

            Graph {
                nodes: nodes;
                links: links;
                floating: floating;
            }


            timeline := Timeline {
                width: 100%;
                height: 1cm;
            }
        }
        palette := Palette {
            visible: false;
            results: command_palette_results;

            closed() => {
                focus.focus();
            }
        }
        key-pressed(event) => {
            if (event.text == Key.Escape) {
                palette.hide();
                return EventResult.accept;
            }

            if (event.modifiers.control && event.text == "k") {
                palette.toggle();
                return EventResult.accept;
            }

            return EventResult.reject;
        }
    }
}
